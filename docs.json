{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Mint Starter Kit",
  "colors": {
    "primary": "#0D9373",
    "light": "#ffffff",
    "dark": "#1a1a1a"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "global": {
      "dropdowns": [
        {
          "dropdown": "Resources",
          "label": "Resources",
          "items": [
            { "label": "Docs Home", "href": "/" },
            { "label": "API Reference", "href": "/api-reference/introduction" },
            { "label": "GitHub", "href": "https://github.com/mintlify" }
          ]
        }
      ],
      "anchors": [
        {
          "anchor": "Critical Theory",
          "icon": "lightbulb",
          "color": { "light": "#ffffff", "dark": "#ffffff" },
          "href": "/critical-theory"
        },
        {
          "anchor": "Documentation",
          "icon": "book-open-cover",
          "href": "https://mintlify.com/docs"
        },
        {
          "anchor": "Blog",
          "icon": "newspaper",
          "href": "https://mintlify.com/blog"
        }
      ]
    },
    "tabs": [
      {
        "tab": "Products",
        "products": [
          {
            "product": "Demo Product",
            "href": "https://example.com/product",
            "description": "A quick demo product"
          }
        ]
      },
      {
        "tab": "Guides",
        "groups": [
          {
            "group": "Getting started",
            "pages": ["index", "quickstart", "development"]
          },
          {
            "group": "Customization",
            "pages": ["essentials/settings", "essentials/navigation"]
          },
          {
            "group": "Writing content",
            "pages": [
              "essentials/markdown",
              "essentials/code",
              "essentials/images",
              "essentials/reusable-snippets"
            ]
          },
          {
            "group": "AI tools",
            "pages": [
              "ai-tools/cursor",
              "ai-tools/claude-code",
              "ai-tools/windsurf"
            ]
          },
          {
            "group": "Resources",
            "icon": "lightbulb",
            "pages": ["resources/overview"]
          }
        ]
      },
      {
        "tab": "API reference",
        "groups": [
          {
            "group": "API documentation",
            "pages": ["api-reference/introduction"]
          },
          {
            "group": "Endpoint examples",
            "pages": [
              "api-reference/endpoint/get",
              "api-reference/endpoint/create",
              "api-reference/endpoint/delete",
              "api-reference/endpoint/webhook"
            ]
          }
        ]
      }
    ]
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:hi@mintlify.com"
      },
      {
        "label": "Home",
        "href": "/"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dashboard.mintlify.com"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/mintlify",
      "github": "https://github.com/mintlify",
      "linkedin": "https://linkedin.com/company/mintlify"
    }
  },
  "fonts": {
    "family": "SF Pro Compact, Helvetica Neue, Arial, sans-serif",
    "weight": 300
  }
}