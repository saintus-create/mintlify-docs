{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Theory",
  "css": "/custom.css",
  "colors": {
    "primary": "#000000",
    "light": "#202020", 
    "dark": "#FFFFFF"
  },
  "rounded": "none",
  "favicon": "/favicon.svg",
  "navigation": {
    "global": {
      "anchors": [
        {
          "anchor": "Critical Theory",
          "icon": "bolt",
          "href": "/resources/overview"
        }
      ]
    },
    "tabs": [
      {
        "tab": "Overview",
        "groups": [
          {
            "group": "Start",
            "pages": ["index"]
          }
        ]
      }
    ]
  },
  "appearance": {
    "default": "dark"
  },
  "background": {
    "decoration": "gradient"
  },
  "styling": {
    "eyebrows": "breadcrumbs",
    "codeblocks": "system",
    "latex": true
  }
}